---
import GradientButton from './sub-components/GradientButton.astro';
import LearnMore from './sub-components/GradientButton.astro';
---

<div class="main-grid m-5">
  <div class="initial-title p-5">
    <div>
      <h1>Boosting your Dating skills with <br />AI-Assisted Chatting</h1>
      <p>
        GameUp uses AI to help you improve your dating skills by providing
        personalized suggested based on your conversations.
      </p>
    </div>

    <div class="sub-grid mt-5">
      <div>
        <div class="icon-title">
          <img src="images/icons/AI.png" alt="" />
          <h2>AI- Powered</h2>
        </div>
        <p>
          Get real-time feedback and suggestions to level up your flirting game.
        </p>
      </div>
      <div>
        <div class="icon-title">
          <img src="images/icons/PT.png" alt="" />
          <h2>Personalized Tips</h2>
        </div>
        <p>
          Tailored advice on how to make your conversations engaging with
          soulmates
        </p>
      </div>
      <div class="col-6">
        <GradientButton text="Learn More" />
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <img src="/images/Features1.png" />
    <div class="circle-container"></div>
  </div>
</div>

<style>
  .main-grid {
    grid-template-columns: 1fr 1fr;
    display: grid;
  }
  :root {
    --gradient1: linear-gradient(
      90deg,
      rgba(250, 65, 120, 1) 0%,
      rgba(255, 99, 76, 1) 100%
    );
  }

  #hero-container {
    font-family: 'Work Sans', sans-serif;
    padding: 4% 20px; /* Add some padding to the container */
  }

  #hero-container h1 {
    text-align: center;
    font-weight: 600;
  }

  .highlight-gradient {
    background: var(--gradient1);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtext {
    margin: 1em 0.5em 0.5em 0.5em;
    color: var(--grey1);
    text-align: center;
    font-family: 'Works Sans', sans-serif;
    font-size: 14px; /* Adjust font size for mobile */
  }

  .row {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap; /* Allow items to wrap to next line on small screens */
  }

  .col-6 {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 100%;
    flex: 0 0 100%; /* Take full width on small screens */
    max-width: 100%; /* Ensure images don't overflow */
  }

  .circle-container {
    display: none; /* Hide the circle container on small screens */
  }

  @media only screen and (min-width: 600px) {
    /* Apply styles for screens larger than 600px */
    .col-6 {
      -webkit-box-flex: 0;
      -ms-flex: 0 0 50%;
      flex: 0 0 50%; /* Take half width on larger screens */
      max-width: 50%; /* Ensure images don't overflow and are side by side */
    }

    .circle-container {
      display: block; /* Show the circle container on larger screens */
      /* Add your circle container styles here if needed */
    }
  }

  @media only screen and (max-width: 600px) {
    #first-img {
      padding-right: 1.4em;
    }
  }
</style>
