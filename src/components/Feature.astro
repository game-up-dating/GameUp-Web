---
import GradientButton from './sub-components/GradientButton.astro';
import LearnMore from './sub-components/GradientButton.astro';
---

<div class="main-grid m-5">
  <div class="initial-title p-5">
    <div>
      <h1>Boosting your Dating skills with <br />AI-Assisted Chatting</h1>
      <p>
        GameUp uses AI to help you improve your dating skills by providing
        personalized suggested based on your conversations.
      </p>
    </div>

    <div class="sub-grid mt-5">
      <div>
        <div class="icon-title">
          <img src="images/icons/AI.png" alt="" />
          <h2>AI- Powered</h2>
        </div>
        <p>
          Get real-time feedback and suggestions to level up your flirting game.
        </p>
      </div>
      <div>
        <div class="icon-title">
          <img src="images/icons/PT.png" alt="" />
          <h2>Personalized Tips</h2>
        </div>
        <p>
          Tailored advice on how to make your conversations engaging with
          soulmates
        </p>
      </div>
      <div class="col-6">
        <GradientButton text="Learn More" />
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <img src="/images/Features1.png" />
    <div class="circle-container"></div>
  </div>
</div>

<style>
  .main-grid {
    grid-template-columns: 1fr 1fr;
    display: grid;
    gap: 10vw;
    text-align: justify;
  }

  .circle-container {
    position: absolute; /* Changed to absolute to ensure proper overlay */
    bottom: 0%; /* Adjusted to position correctly relative to the image */
    left: 80%; /* Centered horizontally */
    transform: translate(
      -50%,
      50%
    ); /* Adjust position to center behind the image */
    width: 600px; /* Adjust size as needed */
    height: 600px; /* Adjust size as needed */
    border-radius: 50%; /* Make it a circle */
    overflow: hidden; /* Ensure the gradient is contained within the circle */
    z-index: -1; /* Lower z-index to ensure it's behind the image */
    /* Add a radial gradient overlay for smooth edges */
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.5),
      transparent 100%
    );
    filter: blur(
      300px
    ); /* Adjusted layer blur effect for practical visibility */
    backdrop-filter: blur(100px); /* Adjust the blur amount as needed */
    -webkit-backdrop-filter: blur(20px); /* For Safari */
  }

  .sub-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10%;
    text-align: justify;
  }
  .circle-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(
      --gradient1
    ); /* Define your gradient variable at a higher scope */
    filter: blur(400px); /* Adjusted blur effect for a visible difference */
    z-index: -1; /* Ensure the gradient is behind the content */
    backdrop-filter: blur(
      40px
    ); /* Increased blur effect to the content behind */
    -webkit-backdrop-filter: blur(40px); /* For Safari */
  }
  p {
    color: black;
  }
  /* Ensure the image is positioned correctly relative to the circle */
  img {
    position: relative;
    z-index: 1; /* Ensure the image is in front of the circle */
  }

  @media only screen and (max-width: 600px) {
    /* Apply styles for screens larger than 768px (tablets and desktops) */

    .circle-container {
      display: none; /* Show the circle container on larger screens */
      /* Add your circle container styles here */
    }

    .main-grid {
      grid-template-columns: 1fr;
      display: grid;
      padding: 1.5em;
      margin: 0 !important;
    }
    p {
      text-align: justify;
    }
    .sub-grid {
      grid-template-columns: 1fr;
    }
    .icon-title {
      display: flex;
      align-items: center;

      h2 {
        margin: 0;
        padding: 0em 0em 0em 0.5em;
      }
      p {
        padding-top: 2em;
      }
    }

    .initial-title {
    }
  }
</style>
