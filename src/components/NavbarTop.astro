---
import { Navbar } from "astro-bootstrap";
import type { NavbarItemType } from "astro-bootstrap";
---

<Navbar class="navbar-expand-lg navbar" data-bs-theme="dark">
  <div class="container-fluid align-items-center" id="navbar">
    <div class="logo">
      <img class="logo-img" src="/images/logo.png" />
    </div>

    <div class="sign-in-container">
      <button class="btn btn-sign-in">Get Early Access</button>
    </div>
  </div>

  <div id="mobile-sidebar" class="mobile-sidebar">
    <!-- <div class="nav-link">Features</div>
    <div class="nav-link">Chat Assistant</div>
    <div class="nav-link">Pricing</div>
    <div class="nav-link">Blog</div> -->
    <button class="btn btn-sign-in">Get Early Access</button>
  </div>

  <style>
    .sign-in-container {
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }
    .btn-sign-in {
      background: linear-gradient(to right, #ff416c, #ff4b2b); /* Gradient background */
      color: white;
      padding: 10px 20px; /* Adjusted padding for better spacing */
      border: none;
      border-radius: 50px; /* Make the button pill-shaped */
      font-size: 12px;
      cursor: pointer;
      transition: background 0.3s ease; /* Smooth transition for hover effect */
    }
    .btn-sign-in:hover {
      background: linear-gradient(to left, #ff416c, #ff4b2b); /* Hover effect */
    }
    .navbar {
      background-color: var(--bg);
    }
    .navbar a {
      color: var(--black);
    }
    .nav-link {
      color: var(--black);
    }

    #navbar {
      display: grid;
      grid-template-columns: 1fr 3fr 1fr;
      color: #333230;
      font-family: "Geist", sans-serif;
      font-weight: 500;
      align-items: center;
    }
    .logo-img {
      width: 100px;
      height: 50px;
      object-fit: contain;
    }
    .logo {
      justify-content: end;
      display: flex;
    }
    .nav-link-container {
      display: flex;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      padding: 0.5em;
      gap: 40px;
      justify-content: center;
    }

    .nav-link {
      justify-content: center;
      display: flex;
    }

    .hamburger-menu {
      display: none;
      cursor: pointer;
    }
    .bar {
      display: block;
      width: 25px;
      height: 3px;
      background-color: var(--black);
      margin: 5px auto;
      transition: all 0.3s ease-in-out;
    }
    .menu-visible .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .menu-visible .bar:nth-child(2) {
      opacity: 0;
    }
    .menu-visible .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .mobile-sidebar {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--bg);
      z-index: 1000;
      padding-top: 60px;
      text-align: center;
      flex-direction: column;
    }
    .mobile-sidebar .nav-link {
      display: block;
      padding: 10px 0;
      color: var(--black);
    }

    @media (max-width: 768px) {
      .nav-link-container {
        display: none;
      }
      .hamburger-menu {
        display: flex;
        justify-content: space-around;
        font-size: smaller;
        align-items: center;
      }

      .btn-sign-in {
        padding: 0.5em;
      }
    }
  </style>

  <script lang="ts">
    function toggleMenu() {
      const hamburgerMenu = document.querySelector(".hamburger-menu");
      const mobileSidebar = document.getElementById("mobile-sidebar");

      if (hamburgerMenu && mobileSidebar) {
        hamburgerMenu.classList.toggle("menu-visible");
        mobileSidebar.style.display = mobileSidebar.style.display === "none" ? "flex" : "none";
      }
    }
  </script>
</Navbar>
