---
import { Navbar } from 'astro-bootstrap';
import type { NavbarItemType } from 'astro-bootstrap';
---

<Navbar class="navbar-expand-lg navbar" data-bs-theme="dark">
  <div class="container-fluid align-items-center" id="navbar">
    <div class="logo">
      <img class="logo-img" src="/public/logo.png" />
    </div>
    <!-- Hamburger menu icon -->
    <div class="hamburger-menu" onclick="toggleMenu()">
      <span>Features</span>
      <span>Chat Assistant</span>
      <span>Pricing</span>
      <span>Blog</span>
    </div>
    <div class="nav-link-container">
      <div class="nav-link">Features</div>
      <div class="nav-link">Chat Assistant</div>
      <div class="nav-link">Pricing</div>
      <div class="nav-link">Blog</div>
    </div>
    <div class="sign-in-container">
      <button class="btn btn-sign-in">Sign In</button>
    </div>
  </div>

  <style>
    .sign-in-container {
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }
    .btn-sign-in {
      background: var(--gradient1);
      color: white;
      padding: 8px 20px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
    }
    .navbar {
      background-color: var(--bg);
    }
    .navbar a {
      color: var(--black);
    }
    .nav-link {
      color: var(--black);
    }

    #navbar {
      display: grid;
      grid-template-columns: 1fr 3fr 1fr;
      color: #333230;
      font-family: 'Geist', sans-serif;
      font-weight: 500;
      align-items: center;
    }
    .logo-img {
      width: 100px; /* Updated width */
      height: 50px; /* Updated height */
      object-fit: contain; /* Maintain aspect ratio */
    }
    .logo {
      justify-content: end;
      display: flex;
    }
    .nav-link-container {
      display: flex;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      padding: 0.5em;
      gap: 40px;
      justify-content: center;
    }

    .nav-link {
      justify-content: center;
      display: flex;
    }

    /* Hamburger menu styles */
    .hamburger-menu {
      display: none; /* Hide by default */
      cursor: pointer;
    }
    .bar {
      display: block;
      width: 25px;
      height: 3px;
      background-color: var(--black);
      margin: 5px auto;
      transition: all 0.3s ease-in-out;
    }
    .menu-visible .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .menu-visible .bar:nth-child(2) {
      opacity: 0;
    }
    .menu-visible .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    /* Media query for mobile devices */
    @media (max-width: 768px) {
      .nav-link-container {
        display: none; /* Hide regular navigation links */
      }
      .hamburger-menu {
        display: flex; /* Show hamburger menu icon */
        justify-content: space-around;
        font-size: smaller;
        align-items: center;
      }

      .btn-sign-in {
        padding: 0.5em;
      }
    }
  </style>

  <script>
    function toggleMenu() {
      const hamburgerMenu = document.querySelector('.hamburger-menu');
      const mobileSidebar = document.getElementById('mobile-sidebar');

      // Type guard to ensure hamburgerMenu and mobileSidebar are not null
      if (hamburgerMenu && mobileSidebar) {
        hamburgerMenu.classList.toggle('menu-visible');
        mobileSidebar.style.display =
          mobileSidebar.style.display === 'none' ? 'block' : 'none';
      }
    }
  </script>
</Navbar>
