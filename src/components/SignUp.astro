---
import SignUpForm from "./sub-components/SignUpForm";
import { Image } from "astro:assets";
---

<div class="container" id="hero-container">
  <div class="mb-4">
    <h1>
      Take your <span class="highlight-gradient">Dating Game</span>
      <br />To the Next Level
    </h1>
    <p class="subtext">
      Transform your flirting skills with <b>personalized tips</b> and <b>real-time feedback</b><br />
      from our AI dating assistant. <b> Upload a screenshot </b>and get expert advice.
    </p>
  </div>

  <SignUpForm client:load />
  <div class="row d-flex">
    <div class="circle-container"></div>
    <div id="first-img" class="col-6 d-flex justify-content-end">
      <Image src="/images/HeroContainer1.webp" alt="Hero Image 1" width={400} height={400} loading="eager" />
      <!-- Change to loading="preload" -->
    </div>
    <div class="col-6">
      <Image src="/images/HeroContainer1.webp" alt="Hero Image 1" width={400} height={400} loading="eager" />
      <!-- Change to loading="preload" -->
    </div>
  </div>
</div>

<style>
  :root {
    --gradient1: linear-gradient(90deg, rgba(250, 65, 120, 1) 0%, rgba(255, 99, 76, 1) 100%);
  }

  #hero-container {
    font-family: "Work Sans", sans-serif;
    padding: 4% 20px; /* Add some padding to the container */
  }

  #hero-container h1 {
    text-align: center;
    font-weight: 600;
  }

  .highlight-gradient {
    background: var(--gradient1);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtext {
    margin: 1em 0.5em 0.5em 0.5em;
    color: var(--grey1);
    text-align: center;
    font-family: "Works Sans", sans-serif;
    font-size: 14px; /* Adjust font size for mobile */
  }

  .row {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap; /* Allow items to wrap to next line on small screens */
  }

  .col-6 {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 100%;
    flex: 0 0 100%; /* Take full width on small screens */
    max-width: 100%; /* Ensure images don't overflow */
  }

  .circle-container {
    display: none; /* Hide the circle container on small screens */
  }

  @media only screen and (min-width: 600px) {
    /* Apply styles for screens larger than 600px */
    .col-6 {
      -webkit-box-flex: 0;
      -ms-flex: 0 0 50%;
      flex: 0 0 50%; /* Take half width on larger screens */
      max-width: 50%; /* Ensure images don't overflow and are side by side */
    }

    .circle-container {
      display: block; /* Show the circle container on larger screens */
      /* Add your circle container styles here if needed */
    }
  }

  @media only screen and (max-width: 600px) {
    #first-img {
      padding-right: 1.4em;
    }
  }
</style>
