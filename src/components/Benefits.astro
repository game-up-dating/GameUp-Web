---
import GradientButton from './sub-components/GradientButton.astro';
import ListBenefits from './sub-components/ListBenefits.astro';
---

<div id="container">
  <div class="grid">
    <div class="p-5 pt-4">
      <div class="p-5 pt-0">
        <h1>Unlock Your Dating Potential With GameUp</h1>
        <p>GameUp makes it easy to find your best matches</p>
        <GradientButton text="Sign In" />
      </div>
    </div>
    <div class="p-5 pt-2">
      <ListBenefits
        name="Step-by-Step"
        icon="/images/icons/step-by-step.png"
        description="GameUp analyzes your conversations and provides AI-Generated suggestions to level up your dating skills. "
        sidebar={true}
      />
      <ListBenefits
        name="Ai Assistance"
        icon="/images/icons/AI-As.png"
        description="GameUp analyzes your conversations and provides AI-Generated suggestions to level up your dating skills. "
        sidebar={true}
      />
      <ListBenefits
        name="Conversation Analysis"
        icon="/images/icons/convo.png"
        description="GameUp analyzes your conversations and provides AI-Generated suggestions to level up your dating skills. "
        sidebar={true}
      />
      <ListBenefits
        name="Flirtiness Levels"
        icon="/images/icons/flirt.png"
        description="GameUp analyzes your conversations and provides AI-Generated suggestions to level up your dating skills. "
        sidebar={true}
      />
    </div>
  </div>
</div>

<style type="text/css">
  #container {
    background-color: white;
  }
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 14vw;
  }

  @media only screen and (max-width: 600px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
