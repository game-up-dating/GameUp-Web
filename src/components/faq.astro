---
import {AccordionComponent} from "@/components/sub-components/Accordian";
---

<div id="faq" class="flex justify-center flex-col mt-5">
  <!-- <div class="circle-container"></div> -->
  <div class="header">
    <h1>Frequently Asked Questions</h1>
  </div>
  <AccordionComponent client:only="react" />
  <div id="questions">
    <h2>Still have questions</h2>
    <p>Contact our support team for further assistance</p>
  </div>
</div>

<style>
  #questions {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    text-align: center;
  }
  #faq{
    background: radial-gradient(circle at 20% 30%, rgba(250, 65, 120, 0.03), transparent 60%), 
                        radial-gradient(circle at 70% 60%, rgba(250, 65, 120, 0.03), rgba(255, 99, 76, 0.03) 60%);
     
      
   
  }
  .header {
    text-align: center;
  }
  .circle-container {
    position: absolute;
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    border-radius: 50%;
    overflow: hidden;
    z-index: -1;
    background: radial-gradient(circle at center, rgba(255, 255, 255, 0.5), transparent 100%);
    -webkit-filter: blur(300px);
    filter: blur(300px);
    backdrop-filter: blur(100px);
    -webkit-backdrop-filter: blur(20px);
  }

  .circle-container::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: var(--gradient1);
    -webkit-filter: blur(400px);
    filter: blur(400px);
    z-index: -1;
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
  }

  
</style>
