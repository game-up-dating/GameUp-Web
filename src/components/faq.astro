---
import { AccordianComponent } from './sub-components/Accordian';
---

<div id="faq" class="flex justify-center flex-col mt-5">
  <!-- <div class="circle-container"></div> -->
  <div class="header">
    <h1>Frequetly Asked Questions</h1>
    
  </div>
  <AccordianComponent client:only="react" />
  <div id="questions">
    <h2>Still have questions</h2>
    <p>Contact our support team for further assistance</p>
  </div>
</div>

<style>
  /*
* Prefixed by https://autoprefixer.github.io
* PostCSS: v8.4.14,
* Autoprefixer: v10.4.7
* Browsers: last 4 version
*/

  #questions {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    text-align: center;
  }
  .header {
    text-align: center;
  }
  .circle-container {
    position: absolute;
    /* bottom: 100%; */
    /* left: 50%;  */
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%); /* Adjust position to center */
    width: 600px; /* Adjust size as needed */
    height: 600px; /* Adjust size as needed */
    border-radius: 50%; /* Make it a circle */
    overflow: hidden; /* Ensure the gradient is contained within the circle */
    z-index: -1; /* Place it behind other content */
    /* Add a radial gradient overlay for smooth edges */
    background: -o-radial-gradient(
      center,
      circle,
      rgba(255, 255, 255, 0.5),
      transparent 100%
    );
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.5),
      transparent 100%
    );
    -webkit-filter: blur(300px);
    filter: blur(
      300px
    ); /* Adjusted layer blur effect for practical visibility */
    backdrop-filter: blur(100px); /* Adjust the blur amount as needed */
    -webkit-backdrop-filter: blur(20px); /* For Safari */
  }

  .circle-container::before {
    content: '';
    position: absolute;
    /* top: 0;
    left: 0; */
    width: 100%;
    height: 100%;
    background: var(
      --gradient1
    ); /* Define your gradient variable at a higher scope */
    -webkit-filter: blur(400px);
    filter: blur(400px); /* Adjusted blur effect for a visible difference */
    z-index: -1; /* Ensure the gradient is behind the content */
    backdrop-filter: blur(
      40px
    ); /* Increased blur effect to the content behind */
    -webkit-backdrop-filter: blur(40px); /* For Safari */
  }
</style>
